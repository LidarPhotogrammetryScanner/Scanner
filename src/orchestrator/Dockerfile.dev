# Dockerfile.dev â€” fully working ROS 2 Kilted + Python + rclpy

FROM osrf/ros:kilted-desktop

# Install essential tools and Python dev packages
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-venv \
    python3-colcon-common-extensions \
    git \
    libxcb-xinerama0 \
    libxcb-xinerama0-dev \
    libxkbcommon-x11-0 \
    mesa-utils \
    ros-kilted-rmw-cyclonedds-cpp \
    ros-kilted-cyclonedds \
    && rm -rf /var/lib/apt/lists/*

# Create workspace
WORKDIR /root/ros2_ws
RUN mkdir -p src

# Optional: copy your orchestrator service (can comment out if not needed for dev)
# COPY ./orchestrator_service.py /root/ros2_ws/src/orchestrator_service.py

# Source ROS 2 and build workspace (even if empty)
RUN /bin/bash -c "source /opt/ros/kilted/setup.bash && colcon build --symlink-install || true"

# Set default shell to bash (no entrypoint running Python node)
SHELL ["/bin/bash", "-c"]

# Expose ROS 2 domain
ENV ROS_DOMAIN_ID=0

# Default command: interactive bash (Python works immediately)
CMD ["bash"]
